<div class="container ">
  <!-- Content here -->
  <div class="row text-center my-5">





    <h1 class="text-center mx-auto">Eat-Da-Burger!</h1>
  </div>
  <div class="row">
    <div class="col-4">

      <img
        src="https://purepng.com/public/uploads/large/purepng.com-fast-food-burgerburgerfast-foodhammeatfast-food-burgermc-donaldsburger-king-231519340258hhxn3.png"
        width="200px" alt="">
    </div>
    <div class="col-4">
      <br>
      <h3>Today's deal!</h3>
      <h4> 2 cheese burgers and soda for $1 

        <button type="submit" class="btn btn-primary btn-sm deal-button">Order</button>
      </h4>
      <h4>

        {{!-- <button type="submit" class="btn btn-primary btn-sm">Order</button> --}}
      </h4>
    </div>
    <div class="col-4">

      <h3>Order a burger</h3>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit" class="btn btn-primary">Order</button>
      </form>
    </div>


  </div>
  <div class="row">
    <div class="col-6">

      <h2 class="text-center mx-auto">Burgers waiting to be devoured!</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        <li style=" max-width:500px" class="list-group-item list-group-item-warning ">
          {{burger_name}}
          <button class="change-devoured float-right btn btn-success btn-sm" data-id="{{id}}">
            Eat it!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">

      <h2 class="text-center mx-auto">Devoured burgers!</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        <li class="list-group-item list-group-item-info">
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


</div>